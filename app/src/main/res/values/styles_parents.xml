<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Phonograph.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="md_dark_theme">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="roundSelector">@drawable/round_selector_dark</item>
        <item name="rectSelector">@drawable/rect_selector_dark</item>
        <item name="rectSelectorStrong">@drawable/rect_selector_strong_dark</item>
        <item name="iconColor">@color/ate_secondary_text_dark</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="dividerColor">#18FFFFFF</item>
        <item name="defaultFooterColor">@android:color/transparent</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="playlistCardBackground">@android:color/transparent</item>
        <item name="starsVisibilityMode">gone</item>
        <item name="blurVisibilityMode">gone</item>
        <item name="darkVisibilityMode">visible</item>
        <item name="lightVisibilityMode">gone</item>
        <item name="textColor">#ffffff</item>
        <item name="libraryTitleColor">#ffffff</item>
        <item name="fabIconColor">@color/black</item>
        <item name="circularProgressTrack">#20ffffff</item>
        <item name="buttonBackground">#3c3c3c</item>
        <item name="dialogBackgroundColor">#1e1e1e</item>
        <item name="md_background_color">@color/md_grey_900</item>
        <item name="statusBarColor">@android:color/transparent</item>
        <item name="appBarColor">@android:color/transparent</item>
        <item name="toolBarColor">@android:color/transparent</item>
        <item name="isProTheme">false</item>
    </style>

    <style name="Theme.Phonograph.Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="md_dark_theme">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>
        <item name="rectSelectorStrong">@drawable/rect_selector_strong</item>
        <item name="iconColor">@color/ate_secondary_text_light</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="dividerColor">@color/md_divider_black</item>
        <item name="defaultFooterColor">@android:color/black</item>
        <item name="cardBackgroundColor">@color/md_white_1000</item>
        <item name="playlistCardBackground">@android:color/transparent</item>
        <item name="starsVisibilityMode">gone</item>
        <item name="blurVisibilityMode">gone</item>
        <item name="darkVisibilityMode">gone</item>
        <item name="lightVisibilityMode">visible</item>
        <item name="textColor">#000000</item>
        <item name="libraryTitleColor">#000000</item>
        <item name="fabIconColor">@color/white</item>
        <item name="circularProgressTrack">#20000000</item>
        <item name="buttonBackground">#e1e1e1</item>
        <item name="dialogBackgroundColor">#F5F5F5</item>
        <item name="md_background_color">@color/md_grey_900</item>
        <item name="statusBarColor">#ffffff</item>
        <item name="appBarColor">#ffffff</item>
        <item name="toolBarColor">#ffffff</item>
        <item name="isProTheme">false</item>
    </style>

    <style name="Theme.Phonograph.Base.Dark.Classic" parent="@style/Theme.Phonograph.Base">
        <item name="android:windowBackground">#121212</item>
        <item name="dividerColor">@color/md_divider_white</item>
        <item name="cardBackgroundColor">@color/md_grey_800</item>
        <item name="isProTheme">true</item>
    </style>

    <style name="Theme.Phonograph.Base.Light.Classic" parent="@style/Theme.Phonograph.Base.Light">
        <item name="android:windowBackground">#F5F5F5</item>
        <item name="libraryTitleColor">#ffffff</item>
        <item name="isProTheme">true</item>
    </style>

    <style name="Theme.Phonograph.Base.Stars" parent="@style/Theme.Phonograph.Base">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="dividerColor">#18FFFFFF</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="starsVisibilityMode">visible</item>
        <item name="isProTheme">true</item>
    </style>

    <style name="Theme.Phonograph.Base.Blur" parent="@style/Theme.Phonograph.Base">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="dividerColor">#18FFFFFF</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="blurVisibilityMode">visible</item>
        <item name="isProTheme">true</item>
    </style>

    <style name="Theme.Phonograph.Base.Retrowave" parent="@style/Theme.Phonograph.Base">
        <item name="android:windowBackground">@drawable/gradient_retrowave</item>
        <item name="dividerColor">#18FFFFFF</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="textColor">#F473B9</item>
        <item name="libraryTitleColor">#ECA089</item>
        <item name="isProTheme">true</item>
    </style>

    <style name="Theme.Phonograph.Base.Energetic" parent="@style/Theme.Phonograph.Base">
        <item name="android:windowBackground">@color/black</item>
        <item name="dividerColor">#18FFFFFF</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="textColor">#fff82f</item>
        <item name="libraryTitleColor">#000000</item>
        <item name="buttonBackground">#2d2d2d</item>
        <item name="statusBarColor">@color/yellow</item>
        <item name="appBarColor">@color/yellow</item>
        <item name="toolBarColor">@color/yellow</item>
        <item name="isProTheme">true</item>
    </style>

    <style name="FabParent">
        <item name="borderWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- content description is necessary to find the overflow button later in the layout-->
    <style name="Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:contentDescription">@string/abc_action_menu_overflow_description</item>
    </style>
</resources>