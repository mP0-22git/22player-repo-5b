<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        android:minHeight="@dimen/abc_action_bar_default_height_material">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/enabled"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:checked="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:theme="@style/SCBSwitch"
            app:trackTint="#40ffffff" />

        <ImageView
            android:id="@+id/system_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eq"
            android:layout_gravity="right"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equalizer "
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/boldfont" />

        <TextView
            android:id="@+id/custom_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beta"
            android:textColor="#50FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/boldfont" />


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/seekbar_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_below="@+id/toolbar">

        <Spinner
            android:id="@+id/spinner"
            style="@style/Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_rectangle_outline"
            android:foregroundTint="@color/white"
            android:paddingStart="10dp" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vertical_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seekbar_bass"
        app:layout_constraintTop_toBottomOf="@id/seekbar_layout"
        >

        <TextView
            android:id="@+id/bar1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60 Hz"
            android:fontFamily="@font/boldfont"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/bar1"
            app:layout_constraintEnd_toEndOf="@id/bar1"
            app:layout_constraintTop_toBottomOf="@id/bar1"
            />

        <TextView
            android:id="@+id/bar2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="230 Hz"
            android:fontFamily="@font/boldfont"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/bar2"
            app:layout_constraintEnd_toEndOf="@id/bar2"
            app:layout_constraintTop_toBottomOf="@id/bar2"
            />

        <TextView
            android:id="@+id/bar3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="910 Hz"
            android:fontFamily="@font/boldfont"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/bar3"
            app:layout_constraintEnd_toEndOf="@id/bar3"
            app:layout_constraintTop_toBottomOf="@id/bar3"
            />

        <TextView
            android:id="@+id/bar4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 kHz"
            android:fontFamily="@font/boldfont"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/bar4"
            app:layout_constraintEnd_toEndOf="@id/bar4"
            app:layout_constraintTop_toBottomOf="@id/bar4"
            />

        <TextView
            android:id="@+id/bar5_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 kHz"
            android:fontFamily="@font/boldfont"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/bar5"
            app:layout_constraintEnd_toEndOf="@id/bar5"
            app:layout_constraintTop_toBottomOf="@id/bar5"
            />

        <LinearLayout
            android:id="@+id/bar1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:rotationX="180"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_weight="1">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/slider_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:thumbTint="@color/white"
                    android:progressDrawable="@drawable/seekbar_light_drawable"
                    android:splitTrack="false"
                    app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:rotationX="180"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="@id/bar1"
            app:layout_constraintEnd_toEndOf="@id/bar3"
            android:layout_weight="1">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/slider_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:thumbTint="@color/white"
                    android:progressDrawable="@drawable/seekbar_light_drawable"
                    android:splitTrack="false"
                    app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:rotationX="180"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/slider_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:thumbTint="@color/white"
                    android:progressDrawable="@drawable/seekbar_light_drawable"
                    android:splitTrack="false"
                    app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:rotationX="180"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="@id/bar3"
            app:layout_constraintEnd_toEndOf="@id/bar5"
            android:layout_weight="1">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/slider_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:thumbTint="@color/white"
                    android:progressDrawable="@drawable/seekbar_light_drawable"
                    android:splitTrack="false"
                    app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:rotationX="180"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1">

            <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                    android:id="@+id/slider_5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:thumbTint="@color/white"
                    android:progressDrawable="@drawable/seekbar_light_drawable"
                    android:splitTrack="false"
                    app:seekBarRotation="CW90" /> <!-- Rotation: CW90 or CW270 -->
            </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <me.tankery.lib.circularseekbar.CircularSeekBar
        android:id="@+id/seekbar_bass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cs_negative_enabled="true"
        app:cs_circle_style="round"
        app:cs_start_angle="90"
        app:cs_end_angle="0"
        app:cs_circle_stroke_width="5dp"
        app:cs_pointer_stroke_width="24dp"
        app:cs_pointer_halo_width="2dp"
        app:cs_circle_color = "#20ffffff"
        app:cs_circle_progress_color = "@color/lightblue"
        app:cs_pointer_color = "@color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline50"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/seekbar_bass"
        app:layout_constraintEnd_toEndOf="@id/seekbar_bass"
        app:layout_constraintTop_toTopOf="@id/seekbar_bass"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_bass"
        android:text="Bass"
        android:textColor="#ffffff"
        android:fontFamily="@font/boldfont"
        />

    <me.tankery.lib.circularseekbar.CircularSeekBar
        android:id="@+id/seekbar_virtualizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cs_negative_enabled="true"
        app:cs_circle_style="round"
        app:cs_start_angle="90"
        app:cs_end_angle="0"
        android:rotationY="180"
        app:cs_circle_stroke_width="5dp"
        app:cs_pointer_stroke_width="24dp"
        app:cs_pointer_halo_width="2dp"
        app:cs_circle_color = "#20ffffff"
        app:cs_circle_progress_color = "@color/lightblue"
        app:cs_pointer_color = "@color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/seekbar_virtualizer"
        app:layout_constraintEnd_toEndOf="@id/seekbar_virtualizer"
        app:layout_constraintTop_toTopOf="@id/seekbar_virtualizer"
        app:layout_constraintBottom_toBottomOf="@id/seekbar_virtualizer"
        android:text="3D"
        android:textColor="#ffffff"
        android:fontFamily="@font/boldfont"
        />

    <Button
        android:id="@+id/flat"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_baseline_redo_24"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="@id/guideline50"
        app:layout_constraintEnd_toEndOf="@id/guideline50"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_circle"
        app:layout_constraintStart_toStartOf="@id/flat"
        app:layout_constraintEnd_toEndOf="@id/flat"
        app:layout_constraintBottom_toBottomOf="@id/flat"
        app:layout_constraintTop_toTopOf="@id/flat"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"
        android:text="You can switch to system eq in settings."
        android:textColor="#50ffffff"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
