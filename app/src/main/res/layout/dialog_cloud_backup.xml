<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Signed out state -->
    <LinearLayout
        android:id="@+id/signed_out_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cloud_backup_description"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- Signed in state -->
    <LinearLayout
        android:id="@+id/signed_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Account info and actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/signed_in_as_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="?android:textColorSecondary"
                android:ellipsize="end"
                android:maxLines="1" />

            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:textSize="12sp"
                android:textColor="?colorAccent"
                android:background="?selectableItemBackground" />

        </LinearLayout>

        <!-- Backup button -->
        <Button
            android:id="@+id/backup_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/backup_now"
            android:textAllCaps="false"
            android:background="@drawable/btn_outlined"
            android:textColor="?colorAccent"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:dividerHorizontal"
            android:layout_marginBottom="16dp" />

        <!-- Previous backups header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous_backups"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- No backups message -->
        <TextView
            android:id="@+id/no_backups_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_backups_found"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Backup list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/backup_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:nestedScrollingEnabled="true" />

    </LinearLayout>

    <!-- Progress indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
