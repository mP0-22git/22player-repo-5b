<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/status_bar_padding"
            />

        <ViewStub
            android:id="@+id/cab_stub"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/status_bar_padding"
            />

        <ImageView
            android:id="@+id/blur_header_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_header_height"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/blur_header_gradient"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_header_height"
            android:tint="?fabIconColor"
            android:src="@drawable/gradient_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_header_height"
                android:background="@android:color/transparent"
                android:elevation="@dimen/toolbar_elevation"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="UnusedAttribute">

                <!--placeholder image view, the actual image view can't go here or the shared element transition won't work right-->
                <View
                    android:id="@+id/placeholder_image"
                    android:layout_width="@dimen/detail_header_image_height"
                    android:layout_height="@dimen/detail_header_image_height"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/album_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/placeholder_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="?textColor"
                    android:fontFamily="@font/semiboldfont"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:text="Album Name"
                    />

                <TextView
                    android:id="@+id/artist_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/album_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:textColor="?textColor"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/album_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/artist_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <TextView
                            android:id="@+id/song_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:alpha="0.7"
                            android:textSize="12dp"
                            android:textColor="?textColor"
                            />

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="2dp"
                            android:src="@drawable/ic_baseline_circle_24"
                            app:tint="?textColor"
                            app:layout_constraintStart_toEndOf="@id/song_count_text"
                            app:layout_constraintEnd_toStartOf="@id/duration_text"
                            app:layout_constraintTop_toTopOf="@id/song_count_text"
                            app:layout_constraintBottom_toBottomOf="@id/song_count_text"
                            />

                        <TextView
                            android:id="@+id/duration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/song_count_text"
                            app:layout_constraintTop_toTopOf="parent"
                            android:alpha="0.7"
                            android:textSize="12dp"
                            android:textColor="?textColor"
                            android:layout_marginStart="12dp"
                            />

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="2dp"
                            android:src="@drawable/ic_baseline_circle_24"
                            app:tint="?textColor"
                            app:layout_constraintStart_toEndOf="@id/duration_text"
                            app:layout_constraintEnd_toStartOf="@id/album_year_text"
                            app:layout_constraintTop_toTopOf="@id/song_count_text"
                            app:layout_constraintBottom_toBottomOf="@id/song_count_text"
                            />

                        <TextView
                            android:id="@+id/album_year_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/duration_text"
                            app:layout_constraintTop_toTopOf="parent"
                            android:alpha="0.7"
                            android:textSize="12dp"
                            android:textColor="?textColor"
                            android:layout_marginStart="12dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/detail_header_image_height"
            android:layout_height="@dimen/detail_header_image_height"
            android:scaleType="centerCrop"
            android:elevation="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_album_art"
            android:transitionName="@string/transition_album_art"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/blur_header_image"
            app:layout_constraintBottom_toBottomOf="@id/blur_header_image"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <View
            android:id="@+id/header_overlay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_header_height"
            android:elevation="@dimen/toolbar_elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>
