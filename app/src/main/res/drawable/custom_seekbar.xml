<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="line">
            <stroke
                android:color="#70ffffff"
                android:width="2.5dp"/>
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape
                android:shape="line">
                <stroke
                    android:color="?textColor"
                    android:width="2.5dp"/>
                <corners
                    android:radius="10dp"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="line">
                <stroke
                    android:color="?textColor"
                    android:width="2.5dp"/>
                <corners
                    android:radius="10dp"
                    />
            </shape>
        </clip>
    </item>

</layer-list>